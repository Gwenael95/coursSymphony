{% extends "Home/index.html.twig" %}
{% block main %}
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <h1>#BalanceTaMR</h1>
        </a>
    </nav>
{% block title %} {{ parent() }} - test{% endblock %}

    <ul class="list-group" style="
    align-items: center">
    {% for merge in merges %}
        <li class="list-group-item">
            <img src="{{ merge.author.avatar_url }}" alt="avatar"/>
            merges du projet : {{ merge.projectName }}.
            auteur : {{ merge.author.name }}.
            {% if merge.status =="cannot_be_merged" %}
                <svg width="2em" height="2em" viewBox="0 0 20 20" class="bi bi-backspace-fill" fill="red" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M15.683 3a2 2 0 0 0-2-2h-7.08a2 2 0 0 0-1.519.698L.241 7.35a1 1 0 0 0 0 1.302l4.843 5.65A2 2 0 0 0 6.603 15h7.08a2 2 0 0 0 2-2V3zM5.829 5.854a.5.5 0 1 1 .707-.708l2.147 2.147 2.146-2.147a.5.5 0 1 1 .707.708L9.39 8l2.146 2.146a.5.5 0 0 1-.707.708L8.683 8.707l-2.147 2.147a.5.5 0 0 1-.707-.708L7.976 8 5.829 5.854z"/>
                </svg>
            {% else %}
                <svg width="2em" height="2em" viewBox="0 0 20 20" class="bi bi-arrow-up-circle-fill" fill="green" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/>
                </svg>
            {% endif %}
            <span class="badge badge-primary badge-pill">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
</svg>{{ merge.upvotes }}; <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
</svg>{{ merge.downvotes }}</span>
        </li>
    {% endfor %}
    </ul>
{% endblock %}